{
	"name": "vscode-dafny",
	"displayName": "Dafny IDE",
	"description": "Rich language support for AWS CloudFormation Templates",
	"publisher": "keyboardDrummer",
	"license": "MIT",
	"version": "0.0.20",
	"keywords": [
		"Dafny"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/keyboardDrummer/cloudformation-ide-tooling"
	},
	"icon": "images/aws-cloudformation-icon.png",
	"engines": {
		"vscode": "^1.30.x"
	},
	"categories": [
		"Programming Languages",
		"Linters",
		"Formatters",
		"Language Packs"
	],
	"activationEvents": [
		"onLanguage:dafny"
	],
	"main": "./out/extension",
	"contributes": {
		"languages": [
			{
				"id": "dafny",
				"aliases": [
					"Dafny",
					"dafny"
				],
				"extensions": [
					".dfy",
					".dfyi"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"snippets": [
			{
				"language": "dafny",
				"path": "./snippets/dafny.json"
			}
		],
		"grammars": [
			{
				"language": "dafny",
				"scopeName": "text.dfy.dafny",
				"path": "./syntaxes/Dafny.tmLanguage"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile && cd .. && sbt vscodeprepublish",
		"compile": "tsc -p ./",
		"watch": "tsc -w -p ./",
		"update-vscode": "node ./node_modules/vscode/bin/install",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"create-assembly": "cd Miksilo && sbt assembly",
		"move-assembly": "npm run create-assembly &&",
		"try": "npm run vscode:prepublish && code --extensionDevelopmentPath=$PWD"
	},
	"dependencies": {
		"vscode-extension-telemetry": "0.1.2",
		"expand-home-dir": "^0.0.3",
		"find-java-home": "1.0.0",
		"path-exists": "^3.0.0",
		"vscode-languageclient": "^5.2.1",
		"vscode-languageserver-protocol": "^3.14.1"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.48",
		"@types/node": "^6.14.7",
		"typescript": "^3.8.2",
		"vscode": "1.1.35"
	}
}